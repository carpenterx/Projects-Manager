<Window x:Class="Projects_Manager.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projects_Manager.Windows"
        xmlns:properties="clr-namespace:Projects_Manager.Properties"
        mc:Ignorable="d"
        Title="Settings" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <CheckBox x:Name="showEyeIconsCheck" Content="Show Eye Icons" Margin="2" IsChecked="{Binding Source={x:Static properties:Settings.Default}, Path=ShowEyeIcons, Mode=TwoWay}"/>
        <CheckBox Grid.Row="1" x:Name="showHiddenProjectsCheck" Content="Show Hidden Projects" Margin="2"
                  IsChecked="{Binding Source={x:Static properties:Settings.Default}, Path=ShowHiddenProjects, Mode=TwoWay}"/>
    </Grid>
</Window>
