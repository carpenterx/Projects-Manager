<Window x:Class="Projects_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projects_Manager"
        xmlns:models="clr-namespace:Projects_Manager.Models"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="Projects Manager" Height="450" Width="800">
    <Window.Resources>
        <models:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    <Grid>
        <ListView x:Name="reposListView" Margin="2" SelectionMode="Single" ScrollViewer.CanContentScroll="False">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="2" ToolTip="{Binding Description}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{Binding Name}" Margin="4"/>

                        <Button Grid.Column="1" Margin="2" Visibility="{Binding Private, Converter={StaticResource BoolToVisibilityConverter}}">
                            <iconPacks:PackIconBootstrapIcons Kind="ShieldCheck" Foreground="Green" Margin="2"/>
                        </Button>
                        <Button Grid.Column="2" Margin="2" Click="OpenIssuesLink">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconCodicons Kind="Issues" Foreground="Crimson" Margin="2"/>
                                <TextBlock Text="{Binding OpenIssuesCount}" Width="20" Margin="2" TextAlignment="Right"/>
                            </StackPanel>
                        </Button>
                        <Button Grid.Column="3" Margin="2" Click="OpenRepoClick">
                            <iconPacks:PackIconMaterial Kind="Github" Margin="2"/>
                        </Button>
                        <Button Grid.Column="4" Margin="2">
                            <iconPacks:PackIconBootstrapIcons Kind="Kanban" Foreground="Teal" Margin="2" Visibility="{Binding HasProjects, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </Button>
                        
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
    </Grid>
</Window>
